<?xml version="1.0" encoding="utf-8"?>
<com.rx.demo.ui.view.ImageCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_with_border"
    android:padding="1dp"
    android:layout_margin="@dimen/activity_vertical_margin"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >

    <com.rx.demo.ui.view.SimpleImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:border_color="@color/bg_gray"
        app:border_width="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />


</com.rx.demo.ui.view.ImageCardView>